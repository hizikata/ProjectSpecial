<Window x:Class="ProjectSpecial.View.DispatcherHelperView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSpecial.View"
        mc:Ignorable="d"
        Title="DispatcherHelperView" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="学生姓名"/>
                        <DataGridTextColumn Header="性别"/>
                        <DataGridTextColumn Header="电话"/>
                        <DataGridTextColumn Header="家庭地址">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="Width" Value="Auto"/>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        
                    </DataGrid.Columns>
                    
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
